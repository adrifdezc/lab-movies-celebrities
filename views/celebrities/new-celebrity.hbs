<h2>Which one is your favorite celebrity?</h2>

<form action="/celebrities/create" method="POST">
  <label> Name:
    <input type="text" name="name" />
  </label>
 
  <label> Occupation:
    <input type="text" name="occupation" />
  </label>
 
  <label> Catch phrase:
    <input type="text" name="catchPhrase"/>
  </label>

  <button type="submit"> Create </button>
</form>

{{#if _message}}
<p>{{_message}}</p>
{{/if}}

            <a class="text-danger" href="/celebrities">Go back to the celebrities list!</a>
